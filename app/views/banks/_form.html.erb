<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Bank</h4>
    </div>
    <%= simple_form_for(@bank, remote: true, :html => { :method => :post }) do |f| %>
      <div class="modal-body">
          <p style="display:none;" class="alert alert-warning"></p>
          <p style="display:none;" class="alert alert-success"></p>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :name %></div>
            <div>
              <%= f.input :name, :label=>false, :input_html=>{:class=>"form-control"}, placeholder: "Name" %>
            </div>
          </div>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :kaenko_currency_id, :label=>"Currency" %></div>
            <div>
              <%= f.select :kaenko_currency_id, KaenkoCurrency.all.map{|k| [k.title,k.id]}, 
                                                  	{:prompt=>"Currency"} , {:class=>"selectpicker col-xs-12"}
                                                  %>  
            </div>
          </div>
          <br>
          <div class="row-fluid">
            <div class="span3 offset1">&nbsp;</div>
            <div class="span8"><%= f.submit "Submit", :class=>"btn btn-primary" %></div>
          </div>
      </div>
    <% end %>
  </div>
</div>
