<section class="settings container-fluid tab-pane fade in active" id="connection">
  <h2><i class="kk-settings larger"></i>Connections</h2>
  <!-- AREA SUB NAV -->
  <ul class="areas-sub-nav list-inline">  
    <li class="active">
      <%=link_to connections_path do %> 
        <i class="kk-info larger"></i>
        My Connections
      <% end %>
    </li>
    <li class=""> 
      <%=link_to pending_connection_connections_path, remote: true  do %>
      <i class="kk-credit-card larger"></i>
      Pending Connections
      <% end %>
    </li>

  </ul>
</section>
<!-- DATA AREA TITLE -->
<section class="settings main-container container-fluid">
    
  <div class="row">
    <div class="col-lg-12">
      <!--TABS NAV -->
      <div id="overview">
        <div class="row">
          <div class="col-lg-12 nav-accounts-warper">
                <a href="#" title="choose company" class="toggle-company btn btn-primary visible-xs"><i class="fa fa-align-justify"></i> Choose Account - <span>Primary</span></a>
                <ul class="nav nav-tabs">
                  
                </ul>
            </div>
        </div>
      </div>
        <!--END TAB NAV -->
      <div class="tab-content">
          <!-- TAB CONTENT -->
      <div class="tab-pane fade in active" id="tab-one">
          <div class="row">
              <!-- CARD -->
            <article class="card col-sm-12 col-md-12 col-lg-12 col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading panel-heading-without-i">
                  <div class="dropdown">
                      My Connections
                  </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-hover">
                        <thead class="">
                          <tr>
                            <td>
                             User
                            </td>
                            <td>
                              Status
                            </td>
                          </tr>
                        </thead>
                        <tbody>
                        <%if @connections.size > 0 %>
                          <%@connections.each do |con| %>
                            <tr>
                              <td>
                                <%=(con.to_user == current_user) ? con.from_user.name : con.to_user.name %>
                              </td>
                              <td>
                                <span class="label label-success"><%= con.status %></span>
                              </td>
                            </tr>
                          <% end %>
                        <% else %>
                          <tr>
                            <td>Connections are not available.</td>
                          </tr>

                        <% end %>
                        
                      </tbody>
                    </table>
                  </div>
             </article>
          </div>
          <!-- END TAB CONTENT -->
         

          
      </div>
    </div><!-- END col-lg-12 -->       
  </div><!-- END row -->
</section>

