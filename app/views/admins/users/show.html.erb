<h3 style="display:none;" class="header smaller lighter blue">jQuery dataTables</h3>
<div class="table-header">
  Account Details
</div>
<div class="center">
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Username</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.username%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Email</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.email%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Name</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.name%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Account ID</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.account_number%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Account Type</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable_type%> <%=(@user.account.premium) ? "(Premium)" : ""%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Gender</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.gender%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Date Of Birth</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.date_of_birth.strftime("%d-%m-%Y")%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Language</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.language%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Nationality</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.nation%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Address</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.full_address%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Phone</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.phone%></div>
  </div>
  <% if @user.account.roleable_type == "Business" %>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Representative Position</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.representative_position%></div>
  </div>
  <% end %>
</div>

<% if @user.account.roleable_type == "Business" %>
<div class="table-header">
  Business Details
</div>
<div class="center">
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Country of Incorporation</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.incorporation_country%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Organization Name</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.organization_name%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Organization URL</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=link_to @user.account.roleable.organization_url, @user.account.roleable.organization_url, :target=>"_blank"%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Legal Form</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.legal_form%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Registration Number</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.registration_number%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Date Of Incorporation</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.date_of_incorporation.strftime("%d-%m-%Y")%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Industry</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.industry%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Registered Address</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@user.account.roleable.full_address%></div>
  </div>
</div>
<% end %>
<div class="table-header">
  Subusers
</div>
<div class="center">
  <div class="row-fluid">
    <%@sub_users.each do |sub_user| %>
      <table id="table_report" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Gender</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%=link_to sub_user.email, user_details_user_path(sub_user), remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'%>
            </td>
            <td><%= sub_user.name%></td>
            <td><%= sub_user.gender %></td>
          </tr>  
        </tbody>
      </table>
    <% end %>
  </div>
</div>
