<%= simple_form_for [:admins , @fees_from_to], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="well-formbox">  
    <% if @fees_from_to.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@fees_from_to.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @fees_from_to.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="control-group">
      <label class="control-label">From: </label>
      <div class="controls">
        <%= f.input :from_account, :label=>false, :as=>"select", :collection=>["World","Business","Premier"] %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">To: </label>
      <div class="controls">
        <%= f.input :to_account, :label=>false, :as=>"select", :collection=>["World","Business","Premier"] %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Mode: </label>
      <div class="controls">
        <%= f.input :mode, :label=>false %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Fee Value: </label>
      <div class="controls">
        <%= f.input :fee_value, :label=>false %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Fee Percent: </label>
      <div class="controls">
        <%= f.input :fee_percent, :label=>false %>
      </div>
    </div>
    <div class="clearfix form-actions">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit :class => 'btn btn-info' %>
       </div>
    </div>
  </div>
<% end %>


