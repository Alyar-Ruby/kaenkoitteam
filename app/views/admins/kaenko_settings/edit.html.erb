<% if flash[:notice] %>
<div class="alert alert-success">
  <button data-dismiss="alert" class="close" type="button">
    <i class="icon-remove"></i>
  </button>
  <%=flash[:notice]%>
</div>
<% end %>

<div class="table-header">
  Settings
</div>
<%= simple_form_for([:admins,@kaenko_setting]) do |f| %>
<div class="center">
  <div class="row-fluid">
    <div class="span3 offset2"><strong>TimeZone</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=f.input :timezone, :as=>"select", :collection=>ActiveSupport::TimeZone.all, :label=>false %></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Date & Time</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=f.input :date_time, :label=>false%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Commission for Business Account</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=f.input :business_commission, :label=>false%></div>
  </div>
  <div class="row-fluid">
    <div class="span5 offset5">
      <%=f.submit "Update", :class=>"btn btn-small btn-success" %>
    </div>
  </div>
</div>
<% end %>

