<% if flash[:notice] %>
<div class="alert alert-success">
  <button data-dismiss="alert" class="close" type="button">
    <i class="icon-remove"></i>
  </button>
  <%=flash[:notice]%>
</div>
<% end %>

<div class="table-header">
  Settings
</div>
<div class="center">
  <div class="row-fluid">
    <div class="span3 offset2"><strong>TimeZone</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@kaenko_setting.timezone%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Date & Time</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@kaenko_setting.date_time%></div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset2"><strong>Commission for Business Account</strong></div>
    <div class="span1">:</div>
    <div class="span6"><%=@kaenko_setting.business_commission%></div>
  </div>
  <div class="row-fluid">
    <div class="span5 offset5">
      <%=link_to "Edit", edit_kaenko_setting_path, :class=>"btn btn-small btn-success" %>
    </div>
  </div>
</div>

