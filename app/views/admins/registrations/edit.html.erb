<h2>Change Password</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div>
    <%= f.input :password, autocomplete: "off", :required=>"required" %></div><br>

  <div>
    <%= f.input :password_confirmation, autocomplete: "off", :required=>"required" %></div><br>

  <div>
    <%= f.input :current_password, autocomplete: "off", :required=>"required" %><i>(we need your current password to confirm your changes)</i></div><br>

  <div><%= f.submit "Update" %></div>
<% end %>
