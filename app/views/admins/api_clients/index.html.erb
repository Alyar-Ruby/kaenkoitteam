<div class="row-fluid">
  <h3 style="display:none;" class="header smaller lighter blue">Faqs</h3>
  <div class="table-header">
    Api Clients Details
  </div>

  <table id="table_report" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="center">
          <label>
            <input type="checkbox" />
            <span class="lbl"></span>
          </label>
        </th>
     
        <th class="hidden-phone">
          	Email
        </th>
      
        <th>Client Id</th>
        <th>Client Secret </th>
      </tr>
    </thead>

    <tbody>
      <% @api_clients.each do |api_client| %>
        <tr>
          <td class="center">
            <label>
              <input type="checkbox" />
              <span class="lbl"></span>
            </label>
          </td>

          <td>
            <%= api_client.email %>
          </td>
          <td><%= api_client.client_id %></td>
          <td><%= api_client.client_secret %></td>
        </tr>

      <% end %>
      
    </tbody>
  </table> 
  <div class = "pull-right" style="padding-top:10px;">
  	<%= link_to "New", new_api_client_path, :class => 'btn btn-info' %>
  </div>
</div>


<% content_for :script do %>
  <script src="/assets/admins/jquery-ui-1.10.3.custom.min.js"></script>
  <script src="/assets/admins/jquery.dataTables.min.js"></script>
  <script src="/assets/admins/jquery.dataTables.bootstrap.js"></script>
<% end %>

<% content_for :inlinescript do %>
  <script type="text/javascript">
    $(function() {
      var oTable1 = $('#table_report').dataTable( {
      "aoColumns": [
          { "bSortable": false },
          null, null,
        { "bSortable": false }
      ] } );
      $('table th input:checkbox').on('click' , function(){
        var that = this;
        $(this).closest('table').find('tr &gt; td:first-child input:checkbox')
        .each(function(){
          this.checked = that.checked;
          $(this).closest('tr').toggleClass('selected');
        });
          
      });
    
      $('[data-rel=tooltip]').tooltip();
    })
  </script>
<% end %>
