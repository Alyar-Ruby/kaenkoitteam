<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Card</h4>
    </div>
    <%= simple_form_for(@card, remote: true, :html => { :method => :post }) do |f| %>
      <div class="modal-body">
          <p style="display:none;" class="alert alert-warning"></p>
          <p style="display:none;" class="alert alert-success"></p>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :name %></div>
            <div>
              <%= f.input :name, :label=>false, :input_html=>{:class=>"form-control"}, placeholder: "Name" %>
            </div>
          </div>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :card_type, :label=>"Card Type" %></div>
            <div>
              <%= f.select :card_type, [['Credit','credit'],['Debit','debit']], 
                                                  	{:prompt=>"Card Type"} , {:class=>"selectpicker col-xs-12"}
                                                  %>  
            </div>
          </div>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :expiry_month, :label=>"Expiry Month" %></div>
            <div>
              <%= f.select :expiry_month, [['January','1'],['February','2'],['March','3'],['April','4'],
                ['May','5'],['June','6'],['July','7'],['August','8'],['September','9'],
                ['October','10'],['November','11'],['December','12']], {:prompt=>"Expiry Month"},
                {:class=>"selectpicker col-xs-5"} %>  
              <%= f.select :expiry_year, (Date.today.year..(Date.today.year+40)), {:prompt=>"Expiry Year"},
                {:class=>"selectpicker col-xs-5  pull-right"} %>  
            </div>
          </div>
          <br>
          <div class="row-fluid">
            <div class="span3 offset1">&nbsp;</div>
            <div class="span8"><%= f.submit "Submit", :class=>"btn btn-primary" %></div>
          </div>
      </div>
    <% end %>
  </div>
</div>
