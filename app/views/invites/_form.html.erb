<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">Invite User</h3>
</div>
<%= simple_form_for(@invite, :html => { :method => :post }) do |f| %>
  <div class="modal-body">
      <p style="display:none;" class="alert alert-error"></p>
      <p style="display:none;" class="alert alert-success"></p>
      <div class="row-fluid">
        <div class="span3 offset1"><%= f.label :email %></div>
        <div class="span8"><%= f.input :email, :label=>false, :input_html=>{:class=>"span10"} %></div>
      </div>
      <br>
      <div class="row-fluid">
        <div class="span3 offset1">&nbsp;</div>
        <div class="span8"><%= f.submit "Send Invite", :class=>"btn btn-primary" %></div>
      </div>
  </div>
<% end %>
