<%= render 'request_payments/request_payment_header' %>
<!-- DATA AREA TITLE -->
<section class="request-money-invoice main-container container-fluid">
  <div class="row row-50-top">
    <div class="col-lg-12">
      <div class="row">
        <!-- CARD SEARCH HISTORY-->
        <article class="card col-sm-12 col-md-12 col-lg-9 col-xs-12">
          <div class="panel panel-default">
            <!--div class="panel-heading ">
              <i class="kk-info-plus light"></i>Search<br>
            </div-->
            <div class="panel-body">
              <%=form_tag :invoices, class: "form-inline", role: "form", remote: true,  method: "get" do  %>  
                <div class="form-group">
                  <%= select_tag "currency" , options_from_collection_for_select(KaenkoCurrency.all, :id, :unit, params[:currency] ), :prompt => "Currency" ,  class: "form-control " %>
                </div>
                  <div class="form-group">
                  <%= select_tag "type" , options_for_select([["payment_from", "Payment From"], ["invoice", "Invoice"], ["withdraw", "Withdraw"], ["pay_out", "Pay Out"], ["pay_in", "Pay In"], ["refund" , "Refund"]], params[:type]), :prompt => "Type" ,  class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= select_tag "status" , options_for_select([["Refunded", "refunded"], ["Completed", "completed"], ["Paid", "paid"], ["Pending", "pending"], ["Cancelled", "cancelled"], ["Rejected" , "rejected"]], params[:status]), :prompt => "Status" ,  class: "form-control " %>
                </div>
                <div class="form-group ">
                  <%=text_field_tag "batch_id" , params[:batch_id] , class: "form-control " , placeholder: "Batch ID" %>
                </div>
                <div class="form-group">
                  <%= text_field_tag :email, params[:email], class: "form-control", placeholder:"Name or Email" %>
                </div>
                <div class="form-group pull-right">
                  <%= submit_tag :Submit, class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </article>
          <!-- END CARD SEARCH HISTORY-->
      </div>
      <!-- end row -->
      <div class="row">
        <!-- CARD TABLE -->
        <article class="card card-table col-lg-9">
          <div class="panel panel-default">
              <div class="panel-heading recent-heading ">
<span class="label label-info">Last 30 days</span>
                  <div class="dropdown">
                    Requests & Invoices
                    <a href="#" class="pull-right dropdown-toggle" data-toggle="dropdown"><i class="kk-settings "></i></a>
                <ul class="dropdown-menu">
                   <li>
                        <a href="#">All Currencies</a>
                    </li>
                    <li>
                        <a href="#"><img src="/assets/flag/US.png"> USD</a>
                    </li>
                    <li>
                        <a href="#"><img src="/assets/flag/EU.png"> EUR</a>
                    </li>
                    <li>
                        <a href="#"><img src="/assets/flag/CA.png"> CAD</a>
                    </li>
                    <li>
                        <a href="#"><img src="/assets/flag/PL.png"> PLN</a>
                    </li>
                    <li>
                        <a href="#"><img src="/assets/flag/BR.png"> BRL</a>
                    </li>
                </ul>
                  </div>

              </div>
            <div id="result">
             <%= render 'search_result' %>
            </div>
          </div>
        </article>
        <!-- END CARD TABLE -->
      </div>
      <!-- END row -->
    </div><!-- END col-lg-12 -->       
  </div><!-- END row -->
</section>
