<%= javascript_tag do %>
  $(function() {
    $("#user_image").on("click", function() {
      $("#user_pic").click();
    });
    $("#user_pic").change(function() {
      //$(this).closest('form').submit();
      var form_data = new FormData(); // Creating object of FormData class
        file_content = $("#user_pic")[0].files[0]
        form_data.append("user_pic", file_content);
        $.ajax({
          url: "<%= update_image_users_path %>",
          type: "POST",
          processData: false,
          contentType: false,
          data: form_data,
          dataType: "JSON",
          success: function(response) {
             $("#user_image").html("<img id='p_img' src='"+response.profile+"' />");
             $("aside.nav-fixed-left").find("#circle-image").html("<img id='p_img' src='"+response.circle+"' />");
             <%if current_user.account_admin == true %>
             if ($("#business_image").length){
               $("#business_image").html("<img id='p_img' src='"+response.profile+"' />");
              }
            <% end %>
             
          },
          error: function(response) {
          
            $("#user_image").html("Image not uploaded successfully, Please retry!!");
          }
        });
    });
    $("#online_status").on("click", function() {
      $.getScript("<%=update_online_status_users_path %>")
    });
  });
<% end %>


