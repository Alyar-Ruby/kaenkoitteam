      $("#user_pic").click();
    });
    $("#user_pic").change(function() {
       img = document.getElementById('user_pic'); 
       var form_data = new FormData(); // Creating object of FormData class
       file_content = $("#user_pic")[0].files[0]
      form_data.append("user_pic", file_content);
      $.ajax({
        url: "<%= update_image_users_path %>",
        type: "POST",
        processData: false,
        contentType: false,
        data: form_data,
        dataType: "JSON",
        success: function(response) {
           $("#user_image").html("<img  style='width:125px;' src='"+response.profile+"' />");
           $("aside.nav-fixed-left").find("#circle-image").html("<img id='p_img' src='"+response.circle+"' />");
        },
        error: function(response) {
          $("#user_image").html($.parseJSON(response.responseText).errors);
        }
        });
    });
