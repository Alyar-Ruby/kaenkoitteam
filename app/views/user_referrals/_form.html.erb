<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Referral User</h4>
    </div>
    <%= simple_form_for(@user_referral, remote: true, :html => { :method => :post }) do |f| %>
      <div class="modal-body">
          <p style="display:none;" class="alert alert-error"></p>
          <p style="display:none;" class="alert alert-success"></p>
          <div class="form-group">
            <div class="span3 offset1"><%= f.label :email %></div>
            <div>
              <%= f.input :email, :label=>false, :input_html=>{:class=>"form-control"}, placeholder: "Email" %>
            </div>
          </div>
          <br>
          <div class="row-fluid">
            <div class="span3 offset1">&nbsp;</div>
            <div class="span8"><%= f.submit "Submit", :class=>"btn btn-primary" %></div>
          </div>
      </div>
    <% end %>
  </div>
</div>
