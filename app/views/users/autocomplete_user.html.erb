<style>
	.company-brief, div.cardssocial .company-brief {
		font-size: 11px;
		color: #A5A5A5;
	}
 .friend .company-brief i {
    font-size: 13px;
    color: #A5A5A5 !important;
    line-height :13px !important;
  }
    
    .friend .web-link a{
    color: #a5a5a5!important;
    }
    .friend .web-link a:hover{
    color:#009ad9!important;
    }

  .friend span  {
  	padding-left: 8px;
  	display: inline-block;
  	line-height: 5px;
  }

  a:hover {
    color: #009ad9;
  }
  
</style>
<%if @accounts.size > 0 %>
	<% @accounts.each do |account| %>
	 
		 <div class="friend display_box text-left" style="border-top: solid 1px #E3E8E8;" >
			<%= link_to social_user_path(account.id), remote: true do %>		
			    <img src="<%= account.display_image %>" style="width:50px; height:50px; float:left; margin-right:6px;" class="img-circle" />
			    
				    <span>
				    	<strong class="blue-hl">
				      <%= account.display_name %>
				      </strong>
				    </span><br>
			  	
			    <span class="company-brief">
	           <i class="fa fa-map-marker"></i> 
	          <%= " #{account.display_city} , #{country_name(account.display_country)}" %> 
	        </span>
	     <% end %>
	     	<br>
				 <span class="web-link"><%= link_to account.display_website, "http://#{account.display_website}", target: "_blank" , style: "hover:color:#A5A5A5;" %></span>
			</div>
	
	
	<% end %>
<% end %>
