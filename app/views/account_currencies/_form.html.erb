<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Add Currency</h4>
      <div id="currency_error_msg" class="alert alert-warning" style="display:none;"></div>
    </div>
    <%= simple_form_for(@account_currency, url: :account_currencies,  remote: true) do |f| %>
      <div class="modal-body">
          <div class="form-group">
            <div>
                <%= f.input :kaenko_currency_id, :as=>"select", label: false, 
                :collection=>@account_currencies, :prompt=>"Choose currency" , input_html: {class: "form-control input-sm"} %>
            </div>
          </div>
          <br>
          <div class="row-fluid">
            <div class="span3 offset1">&nbsp;</div>
            <div class="span8"><%= f.submit "Submit", :class=>"btn btn-primary" %></div>
          </div>
      </div>
    <% end %>
  </div>
</div>
